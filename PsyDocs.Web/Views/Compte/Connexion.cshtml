@using System.Activities.Statements
@model ConnexionViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Psydocs - Connexion</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/content/vendors")
    @Styles.Render("~/content/app")
    @Scripts.Render("~/bundles/vendors/modernizr")
</head>
<body>
    <div id="login-container">
        <h1 class="h2 text-light text-center push-top-bottom animation-slideDown">
            <strong>Connexion à votre compte</strong>
        </h1>
        <h4 class="has-error">
            <span class="help-block">@Html.ValidationMessage("")</span>
        </h4>

        <div class="block animation-fadeInQuickInv">
            <div class="block-title">
                <h2>Connectez-vous</h2>
            </div>
            <form id="form-login" method="post" class="form-horizontal" action="@Url.Action("Connexion")">
                @Html.HiddenFor(m => m.ReturnUrl)
                <div class="form-group">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(m => m.Courriel, new { @class = "form-control", placeholder = "Votre courriel" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        @Html.PasswordFor(m => m.MotDePasse, new { @class = "form-control", placeholder = "Votre mot de passe" })
                    </div>
                </div>
                <div class="form-group form-actions">
                    <div class="col-xs-8">
                    </div>
                    <div class="col-xs-4 text-right">
                        <button type="submit" class="btn btn-effect-ripple btn-sm btn-primary"><i class="fa fa-check"></i> Connexion</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @Scripts.Render("~/bundles/vendors")
    @Scripts.Render("~/bundles/login")
</body>
</html>
